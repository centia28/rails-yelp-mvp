<div class="container">
  <h2>Restaurant <%= @restaurant.name %></h1>

  <p> <strong>Located at:</strong> <%= @restaurant.address %></p>
  <p><strong>Phone number:</strong> <%= @restaurant.phone_number %></p>
  <p><strong>Category:</strong> <%= @restaurant.category %></p>

  <br>

  <h2>Reviews</h2>
  <ul>
    <% @reviews.each do |review| %>
      <li><%= review.content %> (<%= review.rating %>)</li>
    <% end %>
  </ul>

  <br>
  <h2> Add a new review</h2>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <% if @review.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.input :content %>
    <%= f.input :rating, collection: 0..5 %>

    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
  <br>

  <%= link_to 'Back to restaurants', restaurants_path %>

</div>
